<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.erhuoapp.erhuo.activity.ActivityOther">

    <!--真正内容部分-->
    <!--标题部分-->
    <FrameLayout
        android:id="@+id/fl_other_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_title_top"
        android:paddingBottom="@dimen/padding_title_bottom"
        android:paddingLeft="@dimen/padding_title_left"
        android:paddingRight="@dimen/padding_title_right"
        android:background="@color/main_white">

        <ImageButton
            android:id="@+id/ib_other_return"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:layout_gravity="left|center_vertical"
            android:background="@android:color/transparent"
            android:src="@drawable/btn_return_bg"/>

        <TextView
            android:id="@+id/tv_other_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:singleLine="true"
            android:text="name"
            android:textColor="@color/main_red"
            android:textSize="@dimen/font_title"/>

        <ImageButton
            android:id="@+id/ib_other_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/chat"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/main_red">

        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="match_parent">

            <!--因为后台需要UIL处理图片，貌似一定要给个大小-->
            <ImageView
                android:id="@+id/iv_other_header"
                android:layout_width="@dimen/size_header_middle"
                android:layout_height="@dimen/size_header_middle"
                android:layout_gravity="center"
                android:src="@drawable/header_default"/>

            <ImageView
                android:id="@+id/iv_other_auth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="10dp"
                android:src="@drawable/userinfo_auth"/>

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_other_school"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="school"
                    android:textColor="@color/main_white"
                    android:textSize="@dimen/font_tiny"/>

                <TextView
                    android:id="@+id/tv_other_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:text="grade"
                    android:textColor="@color/main_yellow"
                    android:textSize="@dimen/font_tiny"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_other_selling"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:text="出售"
                        android:textColor="@color/font_white_gray"
                        android:textSize="@dimen/font_middle"/>

                    <TextView
                        android:id="@+id/tv_other_sellingnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="4dp"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/font_white_gray"
                        android:textSize="@dimen/font_tinysmall"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_other_buying"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:text="求购"
                        android:textColor="@color/font_white_gray"
                        android:textSize="@dimen/font_middle"/>

                    <TextView
                        android:id="@+id/tv_other_buyingnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="4dp"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/font_white_gray"
                        android:textSize="@dimen/font_tinysmall"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_other_sold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:text="已售"
                        android:textColor="@color/font_white_gray"
                        android:textSize="@dimen/font_middle"/>

                    <TextView
                        android:id="@+id/tv_other_soldnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="4dp"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/font_white_gray"
                        android:textSize="@dimen/font_tinysmall"/>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_other_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="2dp"
        android:background="@color/main_bgcolor"/>

</LinearLayout>

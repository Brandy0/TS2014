<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout_classify"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/item_listview_goods"
        android:clickable="true"
        android:padding="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_goods_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/logo"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp">

            <LinearLayout
                android:id="@+id/ll_goods_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_goods_header"
                    android:layout_width="@dimen/size_header_small"
                    android:layout_height="@dimen/size_header_small"
                    android:layout_weight="0"
                    android:src="@drawable/header_default"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="4dp">

                    <TextView
                        android:id="@+id/tv_goods_singlename"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:paddingLeft="2dp"
                        android:singleLine="true"
                        android:text="username"
                        android:textStyle="bold"
                        android:textColor="@color/main_red"
                        android:textSize="@dimen/font_tiny"/>

                    <FrameLayout
                        android:id="@+id/fl_goods_auth"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="@dimen/size_header_small"
                            android:layout_height="@dimen/size_header_small"
                            android:src="@drawable/userinfo_auth"/>

                        <TextView
                            android:id="@+id/tv_goods_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:paddingLeft="16dp"
                            android:singleLine="true"
                            android:text="username"
                            android:textStyle="bold"
                            android:textColor="@color/main_red"
                            android:textSize="@dimen/font_tiny"/>
                    </FrameLayout>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/ib_goods_collect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="4dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/item_favorite_bg"/>

                        <TextView
                            android:id="@+id/tv_goods_collectnum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="2dp"
                            android:text="10"
                            android:textColor="@color/main_gray"
                            android:textSize="@dimen/font_tinysmall"/>

                        <ImageButton
                            android:id="@+id/ib_goods_comment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="4dp"
                            android:layout_marginLeft="4dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/item_comment_bg"/>

                        <TextView
                            android:id="@+id/tv_goods_commentnum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="2dp"
                            android:text="10"
                            android:textColor="@color/main_gray"
                            android:textSize="@dimen/font_tinysmall"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_goods_pricetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingBottom="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:text="price"
                    android:textStyle="bold"
                    android:textColor="@color/main_red"
                    android:textSize="@dimen/font_small"/>

                <ImageView
                    android:id="@+id/iv_goods_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/item_goods_new"/>

                <ImageView
                    android:id="@+id/iv_goods_bargin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/item_goods_bargin"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:gravity="right|center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_goods_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 mins ago"
                            android:textColor="@color/main_lightred"
                            android:textSize="@dimen/font_tinysmall"/>

                        <TextView
                            android:id="@+id/tv_goods_dist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="1000 meters"
                            android:textColor="@color/main_lightred"
                            android:textSize="@dimen/font_tinysmall"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_goods_info"
                android:layout_above="@+id/rl_goods_pricetime"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:maxLines="3"
                android:clickable="true"
                android:singleLine="false"
                android:text="content\ncontent\ncontent"
                android:textColor="@color/main_gray"
                android:textSize="@dimen/font_tinysmall"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>